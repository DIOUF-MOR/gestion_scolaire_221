{% extends 'base.html.twig' %}

{% block title %}Liste des filières{% endblock %}

{% block body %}
    <h1>Liste des filières</h1>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    {% if filieres|length >0 %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% comment %} {% for filiere in filieres %}
                    <tr>
                        <td>{{ filiere.id }}</td>
                        <td>{{ filiere.libelle }}</td>
                        <td>{{ filiere.libelle }}</td>
                        <td>
                            <a href="{{ path('filiere_show', {'id': filiere.id}) }}" class="btn btn-info btn-sm">Voir</a>
                            <a href="{{ path('filiere_edit', {'id': filiere.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        </td>
                    </tr>
                {% endfor %} {% endcomment %}
            </tbody>
        </table>
    {% else %}
        <p>Aucune filière trouvée.</p>
    {% endif %}
    
    <a href="{{ path('add_filiere') }}" class="btn btn-primary">Ajouter une filière</a>
{% endblock %}